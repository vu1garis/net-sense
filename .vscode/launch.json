    "version": "0.2.0",
    "configurations": [
        {
            "name": "Fortune Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/SenseHatCli/bin/Debug/net8.0/SenseHatCli.dll",
            "args": [
                "fortune",
                "--loop",
                "true",
                "--interval",
                "1000"
            ],
            "cwd": "${workspaceFolder}/src/SenseHatCli",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Random Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/SenseHatCli/bin/Debug/net8.0/SenseHatCli.dll",
            "args": [
                "random",
                "--loop",
                "true",
                "--interval",
                "64"
            ],
            "cwd": "${workspaceFolder}/src/SenseHatCli",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Poll Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/SenseHatCli/bin/Debug/net8.0/SenseHatCli.dll",
            "args": [
                "poll",
                "--interval",
                "1000"
            ],
            "cwd": "${workspaceFolder}/src/SenseHatCli",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Fill Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/SenseHatCli/bin/Debug/net8.0/SenseHatCli.dll",
            "args": [
                "fill",
