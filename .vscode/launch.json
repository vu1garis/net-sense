            "cwd": "${workspaceFolder}/src/SenseHatCli",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Current Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/SenseHatCli/bin/Debug/net8.0/SenseHatCli.dll",
            "args": [
                "current",
