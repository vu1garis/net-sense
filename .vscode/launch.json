            "cwd": "${workspaceFolder}/src/SenseHatCli",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Clear Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/SenseHatCli/bin/Debug/net8.0/SenseHatCli.dll",
            "args": [
                "clear"
            ],
            "cwd": "${workspaceFolder}/src/SenseHatCli",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Display Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/SenseHatCli/bin/Debug/net8.0/SenseHatCli.dll",
            "args": [
                "display",
                "--text",
                "IT WAS THE BEST OF TIMES, IT WAS THE WORST OF TIMES...",
                "--loop",
                "true",
                "--interval",
                "1",
                "--scroll",
                "true"
            ],
            "cwd": "${workspaceFolder}/src/SenseHatCli",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
